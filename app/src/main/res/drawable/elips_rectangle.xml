<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bagian atas (rectangle) -->
    <item android:bottom="30dp">
        <shape android:shape="rectangle">
            <solid android:color="#363F71" /> <!-- Ganti warna latar belakang sesuai keinginan -->
        </shape>
    </item>
    <!-- Bagian bawah (elips) -->
    <item android:top="50dp">
        <shape android:shape="rectangle">
            <solid android:color="#363F71" /> <!-- Ganti warna latar belakang sesuai keinginan -->
            <corners android:radius="30dp" /> <!-- Sesuaikan radius untuk membuat sudut elips -->
        </shape>
    </item>
</layer-list>