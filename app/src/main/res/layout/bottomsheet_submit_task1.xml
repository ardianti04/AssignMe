<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/customDialog"
        android:background="@color/white"
        app:cardCornerRadius="30sp">

        <LinearLayout
            android:id="@+id/LayoutAnswer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/background_fp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/closeButtonJoinClass"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/column_bg">
                <ImageView
                    android:id="@+id/backButtonAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_back_ios_black_new_24"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtStatusAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/navy"
                android:textSize="15sp"
                android:ellipsize="end"
                android:visibility="invisible"
                android:singleLine="true"
                android:text="@string/handed_in" />
            <TextView
                android:id="@+id/txtLateAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textColor="@color/gray_600"
                android:textSize="11sp"
                android:ellipsize="end"
                android:visibility="invisible"
                android:singleLine="true"
                android:text="@string/done_late" />

            <TextView
                android:id="@+id/txtAnswerTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/answerTask"
                android:singleLine="true"
                style="@style/txtPoppinsbold28"/>
            <TextView
                android:id="@+id/txtAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:text="@string/answer"
                style="@style/txtInterregular14black"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/AnswerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColorHint="@color/black_900_7f"
                app:placeholderText="Enter class code"
                android:visibility="invisible"
                app:placeholderTextColor="@color/black_900_7f">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:ems="10"
                    style="@style/etRoundedOutlineBlack"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/txtYourAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:visibility="invisible"
                android:background="@drawable/detail_column"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtErrorAnswer"
                style="@style/txtInterregular14red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:layout_marginEnd="@dimen/_10pxh"
                android:ellipsize="end"
                android:singleLine="false"
                android:text="" />

            <LinearLayout
                android:id="@+id/linearSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="bottom"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:visibility="invisible"
                    style="@style/btnSolidRounded"
                    android:text="@string/submit"
                    android:textAllCaps="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearUnsubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:layout_gravity="center_horizontal"
                android:gravity="bottom"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnUnsubmit"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:visibility="invisible"
                    style="@style/etRoundedOutlineBlack"
                    android:text="@string/unsubmit"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
