<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/parent"
    app:cardBackgroundColor="@color/white"
    android:layout_marginTop="5dp"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/rectengle_abu"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp">

            <ImageView
                android:id="@+id/iconAssignment"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/assignment_icon" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/relative1"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/txtNamaMapel"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Course"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:singleLine="true"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txtDeskripsiTugas"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:singleLine="true"
                android:layout_below="@+id/txtNamaMapel"/>
            <TextView
                android:id="@+id/txtDue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due "
                android:textColor="@color/gray_menu"
                android:textSize="11sp"
                android:layout_below="@+id/txtDeskripsiTugas"/>
            <TextView
                android:id="@+id/txtTglBerakhir"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Due 5 Jul 2023"
                android:textColor="@color/gray_menu"
                android:textSize="11sp"
                android:layout_below="@+id/txtDeskripsiTugas"
                android:layout_toEndOf="@+id/txtDue"/>
        </RelativeLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>