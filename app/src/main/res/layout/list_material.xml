<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="100dp"
    android:id="@+id/parent"
    app:cardBackgroundColor="@color/white"
    android:layout_marginTop="10dp"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/rectengle_abu"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/relativeTop"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imgMateri"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/img_notebookdynami" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeTop"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASSIGNED TO YOU"
                android:textColor="#116309"
                android:textStyle="bold"
                android:id="@+id/Assigned"
                android:layout_marginStart="10dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/relative1"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/txtNamaMateri"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Materi Algebra"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTglUpload"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="5 November 2023"
                android:textColor="@color/gray_menu"
                android:textSize="15sp"
                android:layout_below="@+id/txtNamaMateri"/>
        </RelativeLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>